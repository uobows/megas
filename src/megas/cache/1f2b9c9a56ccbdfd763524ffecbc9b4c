  <w:LsdException Locked="false" Priority="71" SemiHidden="false"    UnhideWhenUsed="false" Name="Colorful Shading Accent 6"/>  <w:LsdException Locked="false" Priority="72" SemiHidden="false"    UnhideWhenUsed="false" Name="Colorful List Accent 6"/>  <w:LsdException Locked="false" Priority="73" SemiHidden="false"    UnhideWhenUsed="false" Name="Colorful Grid Accent 6"/>  <w:LsdException Locked="false" Priority="19" SemiHidden="false"    UnhideWhenUsed="false" QFormat="true" Name="Subtle Emphasis"/>  <w:LsdException Locked="false" Priority="21" SemiHidden="false"    UnhideWhenUsed="false" QFormat="true" Name="Intense Emphasis"/>  <w:LsdException Locked="false" Priority="31" SemiHidden="false"    UnhideWhenUsed="false" QFormat="true" Name="Subtle Reference"/>  <w:LsdException Locked="false" Priority="32" SemiHidden="false"    UnhideWhenUsed="false" QFormat="true" Name="Intense Reference"/>  <w:LsdException Locked="false" Priority="33" SemiHidden="false"    UnhideWhenUsed="false" QFormat="true" Name="Book Title"/>  <w:LsdException Locked="false" Priority="37" Name="Bibliography"/>  <w:LsdException Locked="false" Priority="39" QFormat="true" Name="TOC Heading"/> </w:LatentStyles></xml><![endif]--> <!--[if gte mso 10]><style> /* Style Definitions */ table.MsoNormalTable  {mso-style-name:"Tabla normal";  mso-tstyle-rowband-size:0;  mso-tstyle-colband-size:0;  mso-style-noshow:yes;  mso-style-priority:99;  mso-style-parent:"";  mso-padding-alt:0cm 5.4pt 0cm 5.4pt;  mso-para-margin:0cm;  mso-para-margin-bottom:.0001pt;  mso-pagination:widow-orphan;  font-size:12.0pt;  font-family:Cambria;  mso-ascii-font-family:Cambria;  mso-ascii-theme-font:minor-latin;  mso-hansi-font-family:Cambria;  mso-hansi-theme-font:minor-latin;} </style><![endif]-->   <!--StartFragment--> <br /><div class="MsoNormal"><br /><o:p></o:p></div><!--EndFragment-->";s:12:"link_replies";s:147:"http://clarittta.blogspot.com/feeds/5807236386707088518/comments/defaulthttp://www.blogger.com/comment.g?blogID=29863294&postID=5807236386707088518";s:9:"link_edit";s:71:"http://www.blogger.com/feeds/29863294/posts/default/5807236386707088518";s:9:"link_self";s:71:"http://www.blogger.com/feeds/29863294/posts/default/5807236386707088518";s:4:"link";s:64:"http://clarittta.blogspot.com/2012/09/un-lugar-en-la-tierra.html";s:11:"author_name";s:7:"Clarita";s:12:"author_email";s:19:"noreply@blogger.com";}i:1;a:10:{s:2:"id";s:59:"tag:blogger.com,1999:blog-29863294.post-4885095250734044127";s:9:"published";s:29:"2011-06-27T18:59:00.006+02:00";s:7:"updated";s:29:"2011-06-27T19:11:49.152+02:00";s:12:"atom_content";s:8723:"<span class="Apple-style-span"   style="  color: rgb(240, 248, 255); font-family:Arial, Helvetica;font-size:small;"><i><div><span class="Apple-style-span"  style="font-family:Arial, Helvetica;"><i><span class="Apple-style-span"  style="color:#FFFFFF;"><span class="Apple-style-span" style="font-size: medium;"><br /></span></span></i></span></div><div style="text-align: center;"><span class="Apple-style-span"  style="font-family:Arial, Helvetica;"><i><span class="Apple-style-span"  style="font-style: normal; line-height: 22px; font-family:'Microsoft Sans Serif', Verdana, Arial;"><span class="Apple-style-span"  style="color:#FFFFFF;"><span class="Apple-style-span" style="font-size: medium;"><img src="http://www.surrealists.co.uk/artistsimages/Magritte-Homesickness1941.jpg" alt="Homesickness 1941 by Rene Magritte" style="border-top-width: 0px; border-right-width: 0px; border-bottom-width: 0px; border-left-width: 0px; border-style: initial; border-color: initial; " /></span></span></span></i></span></div><div><span class="Apple-style-span"  style="font-family:Arial, Helvetica;"><i><span class="Apple-style-span"  style="color:#FFFFFF;"><span class="Apple-style-span" style="font-size: medium;"><br /></span></span></i></span></div><div><span class="Apple-style-span"  style="font-family:Arial, Helvetica;"><i><span class="Apple-style-span"  style="color:#FFFFFF;"><span class="Appl